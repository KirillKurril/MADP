@model IReadOnlyList<ALWD.Domain.Entities.Product>

<h1>Edit Product</h1>
<form asp-action="Update" method="post">
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="Name" value="" required><br><br>

    <label for="Description">Description:</label>
    <textarea id="Description" name="Description"></textarea><br><br>

    <label for="Price">Price:</label>
    <input type="number" id="Price" name="Price" value="" step="0.01" required><br><br>

    <label for="Quantity">Quantity:</label>
    <input type="number" id="Quantity" name="Quantity" value="" required><br><br>

    <label for="Image">Image:</label>
    <input type="file" id="Image" name="Image" accept="image/*"><br><br>

    <label for="CategoryId">Category ID:</label>
    <input type="number" id="CategoryId" name="CategoryId" value="" required><br><br>

    <button type="submit">Update Product</button>
</form>