@model ALWD.UI.ViewModels.PaginationViewModel

<li class="page-item">
    <a class="page-link"
        asp-controller="Catalog"
        asp-action="Index"
        asp-route-category="@Model.CurrentCategoryNormilizedName"
        asp-route-page="@(Model.CurrentPage > 1 ? Model.CurrentPage - 1 : Model.CurrentPage)">
        Previous
    </a>
</li>

@foreach (var item in Enumerable.Range(1, Model.TotalPages))
{
    <li class="page-item">
        <a class="page-link"
           asp-controller="Catalog"
           asp-action="Index"
           asp-route-category="@Model.CurrentCategoryNormilizedName"
           asp-route-page="@item">
            @item
        </a>
    </li>
}
<li class="page-item">
    <a class="page-link"
       asp-controller="Catalog"
       asp-action="Index"
       asp-route-category="@Model.CurrentCategoryNormilizedName"
       asp-route-page="@(Model.CurrentPage < Model.TotalPages ? Model.CurrentPage + 1 : Model.CurrentPage)">
       Next
    </a>
</li>