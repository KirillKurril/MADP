@page
@model ALWD.UI.Admin.Pages.ProductPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Name
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Description
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Price
        </dd>
        <dt class="col-sm-2">
            Количество
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Quantity
        </dd>
        <dt class="col-sm-2">
            Изображение
        </dt>
        <dd class="col-sm-10 mb-3">
            <img src="@Model.Product.Image.URL" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Category.Name
        </dd>
    </dl>
    
    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Delete" class="btn btn-danger my-2" />  
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
