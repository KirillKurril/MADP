@page
@model ALWD.UI.Admin.Pages.ProductPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Name
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Description
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Price
        </dd>
        <dt class="col-sm-2">
            Количество
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Quantity
        </dd>
        <dt class="col-sm-2">
            Изображение
        </dt>
        <dd class="col-sm-10 mb-3">
            <img src="@Model.Product.Image.URL" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10 mb-3">
            @Model.Product.Category.Name
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success mt-2" asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a>  
    <a class="btn btn-danger my-2" asp-page="./Delete" asp-route-id="@Model.Product.Id">Delete</a>  
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>
