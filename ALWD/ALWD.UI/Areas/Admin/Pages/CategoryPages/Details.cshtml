@page
@model ALWD.UI.Admin.Pages.CategoryPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название 
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd mb-3>
        <dt class="col-sm-2">
            Нормализованное имя
        </dt>
        <dd class="col-sm-10">
            @Model.Category.NormalizedName
        </dd mb-3>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.Id" class="btn btn-success mt-2">Edit</a> 
    <a asp-page="./Delete" asp-route-id="@Model.Category.Id" class="btn btn-danger my-2">Delete</a> 
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
